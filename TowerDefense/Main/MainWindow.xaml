<Window x:Class="TowerDefense.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Custom="clr-namespace:TowerDefense.WPFCustomControls;assembly=WPFCustomControls"
        Title="Tower Defense" Height="700" Width="500">
    <Grid>
        <Custom:WPFCanvas Name="canvas">
            <Custom:WPFCanvas.Background>
                <SolidColorBrush Color="Green"/>
                <!--TODO: Add background image-->
                <!--<ImageBrush ImageSource=""/>-->
            </Custom:WPFCanvas.Background>
        </Custom:WPFCanvas>
        <Path Name="path" Stroke="Brown" StrokeThickness="10" Fill="Brown" >
            <Path.Data>
                <GeometryGroup>
                    <LineGeometry StartPoint="0,30" EndPoint="50,10"/>
                    <LineGeometry StartPoint="50,10" EndPoint="100,100"/>

                </GeometryGroup>
            </Path.Data>
        </Path>
    </Grid>
</Window>
