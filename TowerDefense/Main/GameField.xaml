<Custom:PropertyChangedAwaredPage x:Class="TowerDefense.Main.GameField"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:Custom="clr-namespace:TowerDefense.WPFCustomControls;assembly=WPFCustomControls"
      mc:Ignorable="d" 
	Title="Tower Defense">
    <Grid>
        <Custom:WPFCanvas Name="canvas">
            <Custom:WPFCanvas.Background>
                <SolidColorBrush Color="Green"/>
                <!--TODO: Add background image-->
                <!--<ImageBrush ImageSource=""/>-->
            </Custom:WPFCanvas.Background>
        </Custom:WPFCanvas>
        <Path Name="path" Stroke="Brown" StrokeThickness="10" Fill="Brown" >
            <Path.Data>
                <GeometryGroup>
                    <LineGeometry StartPoint="0,30" EndPoint="50,10"/>
                    <LineGeometry StartPoint="50,10" EndPoint="100,100"/>
                </GeometryGroup>
            </Path.Data>
        </Path>
    </Grid>
</Custom:PropertyChangedAwaredPage>
